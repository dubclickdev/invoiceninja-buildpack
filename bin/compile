#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>
BUILD_DIR=$1
# install invoiceninja from github 
echo "Installing Invoice Ninja $BUILD_DIR"
#wget -q https://github.com/invoiceninja/invoiceninja/archive/master.zip && tar -xzf master.zip --strip-components=1 --directory=app && rm master.zip
wget -qO- -O $BUILD_DIR/tmp.zip https://github.com/invoiceninja/invoiceninja/archive/master.zip
unzip -q $BUILD_DIR/tmp.zip -d $BUILD_DIR/.tmp
mv -v -t ~/app $BUILD_DIR/.tmp/invoiceninja-master/*
rm -r $BUILD_DIR/.tmp
rm $BUILD_DIR/tmp.zip
echo "Downloaded Invoice Ninja"
