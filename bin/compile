#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# install invoiceninja from github 
echo "Installing Invoice Ninja"
wget https://github.com/invoiceninja/invoiceninja/archive/master.zip && tar -xzf master.zip --strip-components=1 --directory=app && rm master.zip
#wget -qO- -O tmp.zip https://github.com/invoiceninja/invoiceninja/archive/master.zip && unzip -j tmp.zip -d app && rm tmp.zip
echo "Downloaded Invoice Ninja"
